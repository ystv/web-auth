{{define "title"}}Internal: Officership Team ({{.OfficershipTeam.Name}}){{end}}
{{define "content"}}
    <div class="column is-10" style="min-height: 88vh">
        <section class="hero is-info welcome is-small">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">{{.OfficershipTeam.Name}}</h1>
                </div>
            </div>
        </section>
        <br>
        <div class="columns box" style="height: fit-content">
            <div class="column is-2">
                <div class="buttons" style="display: block">
                    <a class="button is-warning is-outlined" onclick="editOfficershipTeamModal()">
                        <span class="mdi mdi-pencil"></span>&ensp;Edit
                    </a>
                    <a class="button is-danger is-outlined" onclick="deleteOfficershipTeamModal()">
                        <span class="mdi mdi-account-multiple-minus"></span>&ensp;Delete
                    </a>
                </div>
            </div>
            <div class="column">
                {{with .OfficershipTeam}}
                    <p>Team ID: {{.TeamID}}<br>
                    Name: {{.Name}}<br>
                    Email alias: {{.EmailAlias}}<br>
                    Short description: {{.ShortDescription}}<br>
                    Full description: {{.FullDescription}}
                    {{if gt (len .TeamMembers) 0}}<br><br>
                        Officership team members: <ol>
                        {{range .TeamMembers}}
                            <li style='list-style-type: none;'><span class='tab'></span>
                                <a href="/internal/officership/officer/{{.OfficerID}}">{{.OfficerName}}</a>{{if .IsLeader}} - Leader{{else if .IsDeputy}} - Deputy{{end}}
                            </li>
                        {{end}}
                        </ol>
                    {{end}}
                    </p>
                {{end}}
            </div>
        </div>
    </div>
    {{template "modals" .}}
{{end}}

{{define "modals"}}
    <div id="editOfficershipTeamModal" class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <div class="box">
                <article class="media">
                    <div class="media-content">
                        <div class="content">
                            <p class="title">Are you sure you want to edit this officership team?</p>
                            <p><strong>This action can be undone by changing them back but be careful</strong><br>
                                Use the fields below to modify your details, to not change a field, either leave it as
                                is or blank.<br>If you change the SuperUser name then many things will break</p>
                            <form action="/internal/officership/team/{{.OfficershipTeam.TeamID}}/edit" method="post">
                                <div class="field">
                                    <label class="label" for="name">Name</label>
                                    <div class="control">
                                        <input
                                                id="name"
                                                class="input"
                                                type="text"
                                                name="name"
                                                placeholder="{{.OfficershipTeam.Name}}"
                                                value="{{.OfficershipTeam.Name}}"
                                        />
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="label" for="emailAlias">Email alias</label>
                                    <div class="control">
                                        <input
                                                id="emailAlias"
                                                class="input"
                                                type="text"
                                                name="emailAlias"
                                                placeholder="{{.OfficershipTeam.EmailAlias}}"
                                                value="{{.OfficershipTeam.EmailAlias}}"
                                        />
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="label" for="shortDescription">Short description</label>
                                    <div class="control">
                                        <textarea
                                                id="shortDescription"
                                                class="input"
                                                name="shortDescription"
                                                placeholder="Short description"
                                        >{{.OfficershipTeam.ShortDescription}}</textarea>
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="label" for="fullDescription">Full description</label>
                                    <div class="control">
                                        <textarea
                                                id="fullDescription"
                                                class="input"
                                                name="fullDescription"
                                                placeholder="Full description"
                                        >{{.OfficershipTeam.FullDescription}}</textarea>
                                    </div>
                                </div>
                                <button class="button is-danger"><span class="mdi mdi-pencil"></span>&ensp;Edit officership team</button>
                            </form>
                        </div>
                    </div>
                </article>
            </div>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
    </div>
    <div id="deleteOfficershipTeamModal" class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <div class="box">
                <article class="media">
                    <div class="media-content">
                        <div class="content">
                            <p class="title">Are you sure you want to delete this officership team?</p>
                            <p>Be careful! Officers and the public site use this and will have to set back up manually.</p>
                            <form action="/internal/officership/team/{{.OfficershipTeam.TeamID}}/delete" method="post">
                                <button class="button is-danger">Delete officership team</button>
                            </form>
                        </div>
                    </div>
                </article>
            </div>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
    </div>
    <script>
        document.querySelectorAll(
            ".modal-background, .modal-close,.modal-card-head .delete, .modal-card-foot .button"
        ).forEach(($el) => {
            const $modal = $el.closest(".modal");
            $el.addEventListener("click", () => {
                $modal.classList.remove("is-active");
            });
        });

        function editOfficershipTeamModal() {
            document.getElementById("editOfficershipTeamModal").classList.add("is-active");
        }

        function deleteOfficershipTeamModal() {
            document.getElementById("deleteOfficershipTeamModal").classList.add("is-active");
        }
    </script>
{{end}}