{{define "title"}}Internal: Role ({{.Role.Name}}){{end}}
{{define "content"}}
    <div class="column is-10" style="min-height: 88vh">
        <section class="hero is-info welcome is-small">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">{{.Role.Name}}</h1>
                </div>
            </div>
        </section>
        <br>
        <div class="columns box" style="height: fit-content">
            <div class="column is-2">
                <div class="buttons" style="display: block">
                    <a class="button is-warning is-outlined">
                        Edit
                    </a>
                    <a class="button is-danger is-outlined" onclick="deleteRoleModal()">
                        Delete
                    </a>
                </div>
            </div>
            <div class="column">
                {{$permissionAdmin := checkPermission .UserPermissions "ManageMembers.Permission"}}
                {{$userAdmin := checkPermission .UserPermissions "ManageMembers.Members.Admin"}}
                {{with .Role}}
                    <p>Role ID: {{.RoleID}}<br>
                    Name: {{.Name}}<br>
                    Description: {{.Description}}{{if gt (len .Permissions) 0}}<br><br>
                    Permissions:
                    <ol>
                        {{range .Permissions}}
                            <li style='list-style-type: none;'><span class='tab'></span>
                                {{if $permissionAdmin}}
                                    <a href="/internal/permission/{{.PermissionID}}">{{.Name}}</a>&emsp;<a
                                            class="button is-danger is-outlined"
                                            onclick="removePermission{{.PermissionID}}FromRoleModal()">Remove
                                        permission</a>
                                {{else}}
                                    {{.Name}}&emsp;<a class="button is-danger is-outlined"
                                                      onclick="removePermission{{.PermissionID}}FromRoleModal()">Remove
                                        permission</a>
                                {{end}}
                            </li>
                            <div id="removePermission{{.PermissionID}}FromRoleModal" class="modal">
                                <div class="modal-background"></div>
                                <div class="modal-content">
                                    <div class="box">
                                        <article class="media">
                                            <div class="media-content">
                                                <div class="content">
                                                    <p class="title">Are you sure you want to remove "{{.Name}}" from
                                                        this role?<br>
                                                        Be careful! Removing permissions can have unintended
                                                        consequences.</p>
                                                    <form action="/internal/role/{{$.Role.RoleID}}/permission/remove/{{.PermissionID}}"
                                                          method="post">
                                                        <button class="button is-danger">Remove permission</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                </div>
                                <button class="modal-close is-large" aria-label="close"></button>
                            </div>
                            <script>
                                function removePermission{{.PermissionID}}FromRoleModal() {
                                    document.getElementById("removePermission{{.PermissionID}}FromRoleModal").classList.add("is-active");
                                }
                            </script>
                        {{end}}
                    </ol>
                    {{end}}
                    {{if gt (len .Users) 0}}<br><br>
                    Inherited by:
                    <ol>
                        {{range .Users}}
                            <li style='list-style-type: none;'><span class='tab'></span>
                                {{if $userAdmin}}
                                    <a href="/internal/user/{{.UserID}}">{{formatUserNameUserStruct .}}</a>&emsp;<a
                                            class="button is-danger is-outlined"
                                            onclick="removeUser{{.UserID}}FromRoleModal()">Remove user</a>
                                {{else}}
                                    {{formatUserNameUserStruct .}}&emsp;<a
                                            class="button is-danger is-outlined"
                                            onclick="removeUser{{.UserID}}FromRoleModal()">Remove user</a>
                                {{end}}
                            </li>
                            <div id="removeUser{{.UserID}}FromRoleModal" class="modal">
                                <div class="modal-background"></div>
                                <div class="modal-content">
                                    <div class="box">
                                        <article class="media">
                                            <div class="media-content">
                                                <div class="content"> <p class="title">Are you sure you want to remove "{{formatUserNameUserStruct .}}" from this
                                                        role?</p>
                                                    <form action="/internal/role/{{$.Role.RoleID}}/user/remove/{{.UserID}}" method="post">
                                                        <button class="button is-danger">Remove user</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                </div>
                                <button class="modal-close is-large" aria-label="close"></button>
                            </div>
                            <script>
                                function removeUser{{.UserID}}FromRoleModal() {
                                    document.getElementById("removeUser{{.UserID}}FromRoleModal").classList.add("is-active");
                                }
                            </script>
                        {{end}}
                    </ol>
                    {{end}}<br><br>
                    {{if gt (len $.PermissionsNotInRole) 0}}
                    Use the drop down below to add more permissions to this role.<br>
                    <form method="post" action="/internal/role/{{.RoleID}}/permission/add">
                        <div class="select">
                            <select id="permission" name="permission">
                                <option value disabled selected>Please select</option>
                                {{range $.PermissionsNotInRole}}
                                    <option value="{{.PermissionID}}">{{.Name}}</option>
                                {{end}}
                            </select>
                        </div>
                        <br>
                        <button class="button is-info">Add permission</button>
                    </form>
                    {{end}}<br><br>
                    {{if gt (len $.UsersNotInRole) 0}}
                    Use the drop down below to add more users to this role.<br>
                    <form method="post" action="/internal/role/{{.RoleID}}/user/add">
                        <div class="select">
                            <select id="user" name="user">
                                <option value disabled selected>Please select</option>
                                {{range $.UsersNotInRole}}
                                    <option value="{{.UserID}}">{{formatUserNameUserStruct .}}</option>
                                {{end}}
                            </select>
                        </div>
                        <br>
                        <button class="button is-info">Add user</button>
                    </form>
                    {{end}}
                    </p>
                {{end}}
            </div>
        </div>
    </div>
    {{template "modals" .}}
{{end}}

{{define "modals"}}
    <div id="deleteRoleModal" class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <div class="box">
                <article class="media">
                    <div class="media-content">
                        <div class="content">
                            <p class="title">Are you sure you want to delete this role?</p>
                            <p>Be careful! If any users or permissions use this role, it will be removed.</p>
                            <form action="/internal/role/{{.Role.RoleID}}/delete" method="post">
                                <button class="button is-danger">Delete role</button>
                            </form>
                        </div>
                    </div>
                </article>
            </div>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
    </div>
    <script>
        document.querySelectorAll(
            ".modal-background, .modal-close,.modal-card-head .delete, .modal-card-foot .button"
        ).forEach(($el) => {
            const $modal = $el.closest(".modal");
            $el.addEventListener("click", () => {
                $modal.classList.remove("is-active");
            });
        });

        function deleteRoleModal() {
            document.getElementById("deleteRoleModal").classList.add("is-active");
        }
    </script>
{{end}}
